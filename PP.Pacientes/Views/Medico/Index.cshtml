@model IEnumerable<MedicoViewModel>

<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Lista de Medicos</h5>

    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-outline-success btn-sm">Crear Médico</a>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    
                    <div class="panel-body">
                        @if (Model.Any())
                        {
                            <table class="table table-hover table-responsive table-striped" id="MyTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nombre)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Apellido)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Especialidad)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Telefono)
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Especialidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefono)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Editar</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No se encontraron medicos.</p>
                        }
                    </div>
                    <div class="panel-footer">
                        
                        <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la lista</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-sm">Atras</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-muted text-center">
        Practica Profesionalizante TECLAB 2024 <br />
        Zabaletta Marcelo Nahuel
    </div>
</div>
