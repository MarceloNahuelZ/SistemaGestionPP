@model IEnumerable<TurnoViewModel>

@{
    ViewData["Title"] = "Turnos Medicos";
}

<h1>Turnos Medicos</h1>


<div class="card text-primary">
    <div class="card-header text-center">
        <h5>Lista de Turnos</h5>
        <a asp-action="Create" class="btn btn-outline-primary btn-sm">Crear Nuevo</a>
    </div>
    <div class="card-body">
        <table class="table table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        Médico 
                    </th>
                    <th>
                        Especialidad
                    </th>
                    <th>
                         Paciente
                    </th>
                    <th>
                        Afiliado N°
                    </th>
                    <th>
                        Fecha y Hora
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Medico.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Medico.Especialidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paciente.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Paciente.NAfiliado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.TurnoId" class="btn btn-outline-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success btn-sm">Atrás</a>
    </div>
    <div class="card-footer text-muted text-center">
        Practica Profesionalizante TECLAB 2024 <br />
        Zabaletta Marcelo Nahuel
    </div>
</div>
